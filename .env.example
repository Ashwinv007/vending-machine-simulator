# Server
PORT=3000
PUBLIC_BASE_URL=http://localhost:3000
ORDER_AMOUNT_INR=299
ORDER_CURRENCY=INR

# Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Firebase RTDB target (required)
FIREBASE_DATABASE_URL=

# Firebase Admin credentials (required)
# Use ONE of the following options:
# Option A (recommended for Railway/cloud): full service account JSON in one env var
FIREBASE_SERVICE_ACCOUNT_JSON=
#
# Option B: split service account fields
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
#
# Option C (local/dev fallback): service account JSON file path
FIREBASE_SERVICE_ACCOUNT_PATH=./service_account.json

# Machine auth + heartbeat
MACHINE_SHARED_TOKEN=dev-machine-token
MACHINE_TOKENS_JSON=
MACHINE_HEARTBEAT_TIMEOUT_MS=30000
MACHINE_HEARTBEAT_CHECK_MS=5000

# Simulator env is now separate:
# see machine-simulator/.env.example
