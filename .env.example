ORDER_CURRENCY=INR

# Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Firebase RTDB target (required)
FIREBASE_DATABASE_URL=

# Firebase Admin credentials (required)
# Use ONE of the following options:
# Option A: service account JSON file path
FIREBASE_SERVICE_ACCOUNT_PATH=./service_account.json
#
# Option B: full service account JSON in one env var
FIREBASE_SERVICE_ACCOUNT_JSON=
#
# Option C: split service account fields
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Machine auth + heartbeat
